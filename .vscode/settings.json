        "**/.svn"           : true,
        "**/.hg"            : true,
        "**/.DS_Store"      : true,
        "**/.vs"            : true,
        "Phenix/**/output"  : true,
        "**/external/asmjit*/tools"  : true,
        "**/external/asmjit*/*.*"    : true,
        "**/external/fmt*/support"   : true,
